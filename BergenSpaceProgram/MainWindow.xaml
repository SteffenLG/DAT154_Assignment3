<Window x:Class="BergenSpaceProgram.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BergenSpaceProgram"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Black">
        <Canvas Name="MyCanvas" Margin="32,25,25,25" Background="Black"/>
        <Slider Name="TimeScaleSlider" HorizontalAlignment="Left" Margin="531,395,0,0" VerticalAlignment="Top" Width="247" SmallChange="0.01" RenderTransformOrigin="0.5,0.5"/>
        <Label Content="TimeScale" HorizontalAlignment="Left" Margin="531,373,0,0" VerticalAlignment="Top" Width="82" Foreground="#FFF90000" FontWeight="Bold" Visibility="Visible"/>
        <Label Content="{Binding ElementName=TimeScaleSlider, Path=Value}" HorizontalAlignment="Left" Foreground="#FFF90000" FontWeight="Bold" Margin="623,378,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
